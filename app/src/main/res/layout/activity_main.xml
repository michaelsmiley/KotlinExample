<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="128dp"
            android:layout_height="103dp"
            android:text="0"
            android:id="@+id/textView"
            android:textSize="75sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="50dp"
            android:gravity="center"/>
    <Button
            android:text="ADD"
            android:layout_width="159dp"
            android:layout_height="98dp"
            android:id="@+id/addButton" android:layout_marginTop="76dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp"
            android:textSize="25sp" android:typeface="normal" android:onClick="addOne"/>
    <Button
            android:text="RESET"
            android:layout_width="142dp"
            android:layout_height="98dp"
            android:id="@+id/resetButton"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="20dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="113dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="112dp" app:layout_constraintHorizontal_bias="0.47"
            android:layout_marginTop="200dp" app:layout_constraintTop_toBottomOf="@+id/textView"
            android:textSize="25sp" android:typeface="normal" android:onClick="clear"/>
    <Button
            android:text="REMOVE"
            android:layout_width="159dp"
            android:layout_height="98dp"
            android:id="@+id/removeButton" android:layout_marginTop="76dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="10dp"
            android:textSize="25sp" android:typeface="normal" android:onClick="removeOne"/>

</android.support.constraint.ConstraintLayout>